<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Patrick Knott</Authors>
    <Company>Knott Studios</Company>
    <PackageProjectUrl>https://github.com/KnottStudios/SqlRapper</PackageProjectUrl>
    <Description>A lightweight ORM alternative that supports bulk inserts, bulk updates, and Sprocs</Description>
    <Copyright>2020</Copyright>
    <RepositoryUrl>https://github.com/KnottStudios/SqlRapper</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Version>1.0.2</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="4.7.0" />
    <PackageReference Include="System.Data.SqlClient" Version="4.8.1" />
  </ItemGroup>

</Project>
